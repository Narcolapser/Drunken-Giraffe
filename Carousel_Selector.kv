<Carousel_Selector>:
	canvas:
		Color:
			rgba: 0.5,0.5,0.5,0.5
		Rectangle:
			pos: self.pos
			size: self.size
	majc: majc
	minc: minc
	Label:
		text: root.text
	Major_Carousel:
		id: majc
		on_current_slide: root.major_update()
		direction: 'bottom'
	Minor_Carousel:
		id: minc
		on_current_slide: root.minor_update()
		direction: 'bottom'

